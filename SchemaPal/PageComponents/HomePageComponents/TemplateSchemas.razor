@inject NavigationManager Navigation
@using SchemaPal.DataTransferObjects

@code {
    private List<DatabaseSchema> templates = new List<DatabaseSchema>
    {
        new DatabaseSchema { Name = "Music Streaming", Id = 1 },
        new DatabaseSchema { Name = "Retail Chain", Id = 2 },
        new DatabaseSchema { Name = "Taxi Service", Id = 3 },
    };

    private void OpenTemplateSchema(DatabaseSchema template)
    {
        Navigation.NavigateTo("/schema-maker?template=" + template.Name);
    }
}

<div class="template-grid">
    @foreach (var template in templates)
    {
        <div class="template-item" @onclick="() => OpenTemplateSchema(template)">
            <h4>@template.Name</h4>
        </div>
    }
</div>

<style>
    .template-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
    }

    .template-item {
        padding: 10px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .template-item:hover {
            background-color: #f0f0f0;
        }
</style>
