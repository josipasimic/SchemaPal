@using SchemaPal.Enums

<div class="modal-window" style="display: @(string.IsNullOrEmpty(Message) ? "none" : "flex");">
    <p class="message">@Message</p>
    <div class="buttons-area">
        <button class="btn modal-btn" 
            @onclick="OnAccept">Prihvati</button>
        <button class="btn modal-btn" 
            style="display: @(ButtonMode == ModalWindowButtonMode.AcceptCancel ? "block" : "none");"
            @onclick="OnCancel">Odustani</button>
    </div>
</div>

@code {
    [Parameter] public string Message { get; set; }

    [Parameter] public ModalWindowButtonMode ButtonMode { get; set; }

    [Parameter] public EventCallback OnAccept { get; set; }

    [Parameter] public EventCallback OnCancel { get; set; }
}