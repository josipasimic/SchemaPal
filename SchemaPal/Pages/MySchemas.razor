@inject NavigationManager Navigation

@code {
    private List<string> userSchemas = new List<string>
    {
        "Schema 1",
        "Schema 2",
        "Schema 3",
        // Fetch actual schema names from backend in real scenario
    };

    private void OpenUserSchema(string schema)
    {
        // Logic to open the schema maker canvas with the selected user's schema
        Navigation.NavigateTo("/schemaMaker?schema=" + schema);
    }
}

<div class="my-schemas">
    @foreach (var schema in userSchemas)
    {
        <div class="schema-item" @onclick="() => OpenUserSchema(schema)">
            <h4>@schema</h4>
        </div>
    }
</div>

<style>
    .my-schemas {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .schema-item {
        padding: 10px;
        cursor: pointer;
    }
</style>
